<h1>Changing Map <small><em><%=@map.name%></em></small></h1>
<form method="post" action="/map/<%=@map.id.to_s%>" class="form-horizontal">
  <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
  <input name="_method" value="put" type="hidden">
  <div class="form-group">
    <label class="col-md-2 control-label">Nickname</label>
    <div class="col-md-10">
      <input type="text" name="name" value="<%=@map.name%>" placeholder="Nickname" class="form-control" required>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-2 control-label">North-East Bound</label>
    <div class="col-md-10">
      <div class="col-md-6">
        <label class="col-md-4 control-label">Latitude</label>
        <div class="col-md-8">
          <input type="number" step="0.00000001" name="upper_right_latitude"  min="-90.00000000" max="90.00000000" value="<%=@map.upper_right[:latitude]%>" placeholder="Latitude" class="urlat form-control" required>
        </div>
      </div>
      
      <div class="col-md-6">
        <label class="col-md-4 control-label">Longitude</label>
        <div class="col-md-8">
          <input type="number" step="0.00000001" name="upper_right_longitude" min="-180.00000000" max="180.00000000" value="<%=@map.upper_right[:longitude] %>" placeholder="Longitude" class="urlon form-control" required>
        </div>
      </div>
      
    </div>
  </div>
  
  
  <div class="form-group">
    <label class="col-md-2 control-label">South-West Bound</label>
    <div class="col-md-10">
      <div class="col-md-6">
        <label class="col-md-4 control-label">Latitude</label>
        <div class="col-md-8">
          <input type="number" step="0.00000001" name="lower_left_latitude"  min="-90.00000000" max="90.00000000" value="<%= @map.lower_left[:latitude] %>" placeholder="Latitude" class="urlat form-control" required>
        </div>
      </div>
      
      <div class="col-md-6">
        <label class="col-md-4 control-label">Longitude</label>
        <div class="col-md-8">
          <input type="number" step="0.00000001" name="lower_left_longitude" min="-180.00000000" max="180.00000000" value="<%= @map.lower_left[:longitude] %>" placeholder="Longitude" class="urlon form-control" required>
        </div>
      </div>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-md-12" align="center">
      <input type="submit" class="btn btn-success" value="Update">
    </div>
  </div>
</form>