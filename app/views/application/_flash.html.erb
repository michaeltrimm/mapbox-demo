<% if flash.count > 0 %>
<div class="container no-margin-bottom">
  <div class="col-md-12">
  <% flash.each do |type, message| %>
    <div class="alert <%= bootstrap_class_for(type) %> fade in margin-top-10" role='alert'>
      <button class="close" data-dismiss="alert">Ã—</button>
      <span class="glyphicon <%= bootstrap_glyphs_icon(type)%>" aria-hidden="true"></span>
      <span class="sr-only"><%= type.capitalize%>:</span>
      <%= message %>
    </div>
  <% end %>
  </div>
</div>
<% end %>